

+ (NSString *)stringWithFileName:(NSString *)name;
- (NSString *)birthDayStringWithSeparate:(NSString *)separate;

/**
 汉字转拼音
 */
- (NSString *)pinYin;
- (NSDictionary *)jsonStringToDic;
- (NSString *)checkSysConflictKey;
- (BOOL)isOnlinePic;
- (NSString *)pathWithParam:(id)param;
